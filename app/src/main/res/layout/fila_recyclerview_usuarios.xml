<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:orientation="horizontal"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/cvUsuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"

        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"

        >
        <!--card_view:cardBackgroundColor="@color/md_brown_50"-->

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <!--    <ImageView
                android:id="@+id/imagenAvatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/image5"/>-->


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagenAvatar"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/nuevo"
                android:layout_marginRight="10dp"/>


            <TextView

                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imagenAvatar"
                android:layout_toEndOf="@+id/imagenAvatar"
                android:layout_toRightOf="@+id/imagenAvatar"
                android:maxLines="1"

                android:text="Nombre"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"
                android:textColor="#795548"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_toEndOf="@+id/imagenAvatar"
                android:layout_toRightOf="@+id/imagenAvatar"
                android:maxLines="1"
                android:text="Nick"
                />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/text2"
                android:layout_toEndOf="@+id/imagenAvatar"
                android:layout_toRightOf="@+id/imagenAvatar"
                android:text="Fecha"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="No conectado"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="14sp"
                android:visibility="invisible"
                />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>